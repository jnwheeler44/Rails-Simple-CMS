<article class="module width_full">
	<header><h3>All Uploads</h3></header>
	
	<div class="tab_container">
		<table id="datatable_menus" class="tablesorter" cellspacing="0">
			<thead>
				<tr>
					<th>Name</th>
					<th>Permalink</th>
					<th>Type</th>
					<th>Created</th>
					<th>Updated</th>
					<th class="index_action">Edit</th>
					<th class="index_action">Delete</th>
				</tr>
			</thead>
			<tbody>
				<% @uploads.each do |upload| %>
				<tr class="<%= cycle("odd", "even") %>">
					<td><%= upload.upload_file_name %></td>
					<td><%= upload.permalink %></td>
					<td><%= upload.upload_content_type %></td>					
					<td><%= upload.created_at %></td>
					<td><%= upload.updated_at %></td>
					<td><%= link_to 'Edit', edit_admin_upload_path(upload), :class => "edit_link" %></td>
					<td><%= link_to 'Destroy', [:admin, upload], confirm: 'Are you sure?', method: :delete, :class => "delete_link" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
<br />
<br />
</article><!-- end of stats article -->
<div class="spacer"></div>